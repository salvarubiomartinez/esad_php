{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Action</h1>

    <table border=1 class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ entity.titre }}</td>
            </tr>
            <tr>
                <th>Jouretmois</th>
                <td>{{ entity.jourEtMois }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Corps</th>
                <td>{{ entity.corps|raw }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('administrator') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('administrator_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
